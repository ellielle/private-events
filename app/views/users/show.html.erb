<% provide(:title, 'Profile') %>
<% if @user.events.empty? %>
    <p>You have no events scheduled.</p>
<% else %>
  <% @user.events.each do |event| %>
    <ul>
    <li class="event-title">Event: <%= link_to "#{event.title}", "/events/#{event.title}" %></li>
    <li class="event-body"><%= event.body %></li>
    </ul>
  <% end %>
<% end %>
