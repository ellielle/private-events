<% provide(:title, 'Profile') %>
<div class="expired-events">
  <a data-toggle="collapse" href="#expiredEvents">Click to view past events</a>
  <div class="collapse" id="expiredEvents">
    <% @expired_events.each do |event| %>
      <%= link_to event.title, event_path(event) %>
    <% end %>
  </div>
</div>
<div class="created-events">
  <p>Events you have created:</p>
  <% if @user.events.empty? %>
      <p>You have no events scheduled.</p>
  <% else %>
    <% @user.events.each do |event| %>
      <ul>
        <li class="event-title"><%= link_to "#{event.title}", event_path(event) %></li>
        <li class="date"><%= I18n.l(event.date, format: :long, locale: :'en') %></li>
      </ul>
    <% end %>
  <% end %>
</div>
<div class="attending-events">
  <p>Events you are attending:</p>
  <% @upcoming_events.each do |event| %>
    <ul>
      <li><%= link_to event.title, event_path(event) %></li>
      <li><%= I18n.l(event.date, format: :long, locale: :'en') %></li>
    </ul>
  <% end %>
</div>