<header class="navbar navbar-fixed-top navbar-dark">
  <div class="container">
    <%= link_to "Simple Events", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav">
        <li>
          <%= link_to "https://github.com/ellielle/private-events" do %>
            <%= octicon "mark-github" %>
          <% end %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Current Events", events_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Profile <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Your Events", profile_path %></li>
              <li><%= link_to "Create New Event", create_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Sign Out", logout_path, method: :delete %></li>
            </ul>
          </li>
          <%# TODO add number of new invites by icon %>
          <% if current_user.invitations.any? %>
            <li><%= link_to invites_path do %>
              <%= octicon "mail-read" %>
              <%= current_user.invitations.count %>
              <% end %>
            </li>
          <% else %>
            <li><%= link_to invites_path do %>
              <%= octicon "mail" %>
              <% end %>
            </li>
          <% end %>
        <% else %>
          <li><%= link_to "Sign In", login_path  %></li>
        <% end %>
       </ul>
    </nav>
  </div>
</header>