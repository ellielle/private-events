<!DOCTYPE html>
<html lang="en">
  <%= render 'layouts/head' %>
  <body>
    <%# render 'layouts/header' %>
    <div class="container">
      <% flash.each do |message_type, msg| %>
        <%= content_tag :div, msg, class: "alert alert-#{message_type}" %>
      <% end %>
    <%= yield %>
    <%= debug(params) if Rails.env.development? %>
    <%= debug(logged_in?) if Rails.env.development? %>
    <%= debug(session[:user_id]) if Rails.env.development? %>
    </div>
  </body>
</html>
